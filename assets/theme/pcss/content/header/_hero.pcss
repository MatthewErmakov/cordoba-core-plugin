.header-hero {
	margin: 0 auto 40px;
	position: relative;
	text-align: center;
	padding-top: var(--spacer-site-header-mobile);
	background-color: var(--color-shark);

	/* CASE: Handles IE flex/min-height bug */
	display: flex;
	width: 100%;
	flex-direction: column;

	@media (--viewport-medium) {
		padding-top: var(--spacer-site-header-full);
		margin-bottom: 60px;
	}

	@media (--viewport-full) {
		margin-bottom: 80px;
	}

	@media (--viewport-large) {
		padding-top: var(--spacer-site-header-large);
	}

	/* CASE: Variant - Content Below Image */
	&.header-hero--content-below {
		padding-top: 0;
		background-color: var(--color-white);
		display: block;
	}

	/* CASE: Variant - Image Short (paired with Content Below Image) */
	&.header-hero--image-short {
		margin-bottom: 50px;

		@media (--viewport-medium) {
			margin-bottom: 75px;
		}

		@media (--viewport-full) {
			margin-bottom: 100px;
		}
	}

	/* CASE: Variant - Image Tall (paired with Content Below Image) */
	&.header-hero--image-tall {
		@media (--viewport-full) {
			margin-bottom: 60px;
		}
	}

	/* CASE: Variant - Smaller Bottom Margin */
	&.header-hero--spacing-little {
		margin-bottom: 40px;

		@media (--viewport-medium) {
			margin-bottom: 65px;
		}
	}

	/* CASE: Single Product */
	.single-product & {
		margin-bottom: 10px;
	}

	/* CASE: Instrument post type */
	.single-guitar &,
	.single-ukulele & {
		margin-bottom: 25px;

		@media (--viewport-medium) {
			margin-bottom: 45px;
		}
	}

	/* CASE: Variant - Featured with stroke & description */
	&.header-hero--featured {
		margin-bottom: 25px;
		padding-top: calc(var(--spacer-site-header-full) + 8%);

		@media (--viewport-medium) {
			margin-bottom: 45px;
			padding-top: calc(var(--spacer-site-header-xlarge) + 6%);
		}

		@media (--viewport-full) {
			padding-top: calc(var(--spacer-site-header-xxlarge) + 6%);
		}
	}
}

