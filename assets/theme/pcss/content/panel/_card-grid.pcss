/* -----------------------------------------------------------------------------
 * Card Grid: Wrapper
 * ----------------------------------------------------------------------------- */

.panel--type-cardgrid__wrapper {

}

/* -----------------------------------------------------------------------------
 * Card Grid: Slider
 * ----------------------------------------------------------------------------- */

.panel--type-cardgrid__slider-wrapper {
	position: relative;

	@media (--viewport-xlarge) {
		margin: 0 auto;
	}
}

.panel--type-cardgrid__slider {
	margin: 0 -4px;
	padding: 4px 16px;

	@media (--viewport-medium) {
		padding: 4px 28px;
	}

	@media (--viewport-full) {
		padding: 4px;
		margin: 0 24px;
	}

	@media (--viewport-xlarge) {
		overflow: hidden;
		margin: 0 -4px;
	}

	.swiper-slide {
		height: auto;
		max-width: 300px;
		width: calc(100% - 1px);

		@media (--viewport-medium) {
			width: calc(50% - 15px);
		}

		@media (--viewport-full) {
			width: calc(33.33% - 18px);
			max-width: none;
		}

		@media (--viewport-large) {
			width: calc(25% - 23px);
		}

		/* CASE: contrain items to max of 300px */
		&.l-upto4__item--constrain {
			@media (--viewport-medium) {
				max-width: none;
			}

			@media (--viewport-full) {
				max-width: 400px;
				width: calc(100% - 1px);
			}

			@media (--viewport-large) {
				width: calc(33.33% - 19px);
				max-width: none;
			}
		}

		.c-card__wrapper {
			display: flex;
			flex-direction: column;
		}
	}
}

/* -----------------------------------------------------------------------------
 * Card Grid: Content
 * ----------------------------------------------------------------------------- */

.panel--type-cardgrid__text {
	margin-left: auto;
	margin-right: auto;
	max-width: var(--grid-width-870);
}

/* -----------------------------------------------------------------------------
 * Card Grid: Link
 * ----------------------------------------------------------------------------- */

.panel--type-cardgrid__link {
	/* CASE: have slider */
	.panel--type-cardgrid__slider-wrapper ~ & {
		margin-top: 31px;

		@media (--viewport-medium) {
			margin-top: 54px;
		}
	}
}
