:root {
	/* -----------------------------------------------------------------------------
	 * Primary Palette
	 * ----------------------------------------------------------------------------- */

	--color-celeste: #d3d4ce;
	--color-mojo: #b95135;
	--color-brown-rust: #ae573d;
	--color-apricot: #e5856c;
	--color-shark: #292d33;
	--color-shark-40: rgba(41, 45, 51, 0.4);
	--color-shark-alt: #1b1e22;
	--color-dove-grey: #626262;
	--color-nevada: #646d7a;
	--color-nevada-50: rgba(100, 109, 122, 0.5);
	--color-raven: #727b89;
	--color-cadet-blue: #b4b9c4;
	--color-waikawa-grey: #556a8b;
	--color-mountain-mist: #919092;
	--color-bali-hai: #8799b2;
	--color-desert-storm: #f2f2f0;
	--color-apple: #57a53c;
	--color-fuel-yellow: #eba819;

	/* -----------------------------------------------------------------------------
	 * Whites
	 * ----------------------------------------------------------------------------- */

	--color-white: #fff;
	--color-white-50: rgba(255, 255, 255, 0.5);
	--color-wild-sand: #f5f5f5;

	/* -----------------------------------------------------------------------------
	 * Greys
	 * ----------------------------------------------------------------------------- */

	--color-grey-light: lighten(var(--color-grey), 0.15);
	--color-grey: grey;
	--color-grey-dark: #303030;
	--color-bombay: #afb5bc;
	--color-bombay-alt: #b2b5b9;
	--color-jumbo: #777678;
	--color-iron: #dadbdf;
	--color-iron-alt: #e4e4e5;
	--color-iron-alt-alt: #d0d3d7;
	--color-silver: #cdcdcd;
	--color-silver-alt: #c4c4c4;
	--color-alto: #d6d6d6;

	/* -----------------------------------------------------------------------------
	 * Blacks
	 * ----------------------------------------------------------------------------- */

	--color-black: #000;
	--color-black-0: rgba(0, 0, 0, 0);
	--color-black-35: rgba(0, 0, 0, 0.35);
	--color-black-5: rgba(0, 0, 0, 0.5);
	--color-black-6: rgba(0, 0, 0, 0.6);
	--color-mako: #3e454f;
	--color-mako-13: rgba(62, 69, 79, 0.13);
	--color-mako-alt: #40454d;
	--color-mako-alt-40: rgba(64, 69, 77, 0.4);
	--color-black-light-40: rgba(4, 4, 4, 0.4);

	/* -----------------------------------------------------------------------------
	 * Backgrounds
	 * ----------------------------------------------------------------------------- */

	--color-bgd: var(--color-white);
	--color-bgd-content: var(--color-white);
	--color-bgd-login: #f1f1f1;
	--color-bgd-footer: var(--color-shark);

	/* -----------------------------------------------------------------------------
	 * Links
	 * ----------------------------------------------------------------------------- */

	--color-link: var(--color-brown-rust);
	--color-link-hover: var(--color-apricot);

	/* -----------------------------------------------------------------------------
	 * Text
	 * ----------------------------------------------------------------------------- */

	--color-text: var(--color-mako-alt);

	/* -----------------------------------------------------------------------------
	 * Borders
	 * ----------------------------------------------------------------------------- */

	--color-border: var(--color-silver-alt);

	/* -----------------------------------------------------------------------------
	 * Accordions
	 * ----------------------------------------------------------------------------- */

	--ac_active_header: var(--color-brown-rust);
	--ac_header_bg: var(--color-white);
	--ac_header_bg_active: var(--color-white);
	--ac_border: var(--color-iron-alt-alt);
	--ac_q_text: var(--color-brown-rust);
}
