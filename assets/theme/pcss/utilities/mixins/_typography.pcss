
/* -----------------------------------------------------------------------------
 *
 * Icons
 *
 * ----------------------------------------------------------------------------- */

@define-mixin icon {
	font-family: var(--font-family-core-icons);
	speak: none;
	font-style: normal;
	font-weight: normal;
	font-variant: normal;
	text-transform: none;
	line-height: 1;
	-webkit-font-smoothing: antialiased;
	-moz-osx-font-smoothing: grayscale;
	text-rendering: auto;
}

/* -------------------------------------------------------------------------
 *
 * Body Content
 *
 * ------------------------------------------------------------------------- */

@define-mixin body-content {
	font-size: var(--font-size-content-s);
	line-height: var(--line-height-144);

	@media (--viewport-medium) {
		font-size: var(--font-size-content);
		line-height: var(--line-height-155);
	}
}

/* -----------------------------------------------------------------------------
 *
 * Quotes & Blockquotes
 *
 * ----------------------------------------------------------------------------- */

@define-mixin quote-base {
	text-align: center;
}

@define-mixin quote-text {
	text-align: center;
	font-family: var(--font-family-quando);
	font-size: 24px;
	line-height: var(--line-height-144);

	@media (--viewport-medium) {
		font-size: 30px;
		line-height: var(--line-height-135);
	}
}

/* -----------------------------------------------------------------------------
 *
 * Media Caption
 *
 * ----------------------------------------------------------------------------- */

@define-mixin media-caption {
	color: var(--color-jumbo);
	margin: var(--spacer-xxs) 0 0;
	font-size: 13px;
	line-height: var(--line-height-144);

	@media (--viewport-medium) {
		text-align: center;
		margin-top: 12px;
		padding-left: 15px;
		padding-right: 15px;
	}
}

/* -------------------------------------------------------------------------
 *
 * Content Anchors
 *
 * ------------------------------------------------------------------------- */

@define-mixin anchor {
	color: var(--color-link);

	&:hover,
	&:focus {
		color: var(--color-link-hover);
	}
}
