/* -----------------------------------------------------------------------------
 *
 * Media
 *
 * ----------------------------------------------------------------------------- */

img,
iframe,
object,
embed,
video {
	border: 0;
	line-height: 0;
	height: auto;
	margin-top: var(--spacer);
	margin-bottom: var(--spacer);
	display: block;
	max-width: 100%;

	/* Messes with WP editor image resizing
	and don't think it's needed
	width: auto; */
}

img {

	&[class*="align"],
	&[class*="wp-image-"],
	&[class*="attachment-"] {
		height: auto;
		display: block;
		max-width: 100%;
	}

	&.alignleft,
	&.alignright {
		margin-top: var(--spacer);
		margin-bottom: var(--spacer);
	}
}

.wp-caption {
	margin: var(--spacer) auto;
	width: auto !important;

	img {
		margin-bottom: 0;
		margin-top: 0;
	}
}

.wp-caption-text,
.entry-caption,
.wp-caption-dd {
	color: var(--color-jumbo);
	margin: var(--spacer-xs) auto;
	font-size: 13px;
}

.wp-caption-dt {
	margin: 0;
}

.aligncenter {
	margin-left: auto;
	margin-right: auto;
	display: block;
}

.alignleft {
	float: left;

	&img,
	&.wp-caption {
		margin-right: var(--spacer-m);
	}
}

.alignright {
	float: right;

	&img,
	&.wp-caption {
		margin-left: var(--spacer-m);
	}
}

.alignleft,
.alignright {
	max-width: 35% !important;

	&img,
	&.wp-caption {
		margin-top: 5px;
		margin-bottom: var(--spacer);
	}
}

/* Gallery */
.gallery {
	margin: var(--spacer-lg) -6px !important;
	padding: 0;

	img {
		margin: 0 auto;
	}
}

/* Embeds */
.wpview.wpview-wrap {
	margin-top: calc(var(--spacer) * -1px);
	margin-bottom: 0;

	.wp-embed-wrap {
		aspect-ratio: '16:9';
		overflow: hidden;
	}

	iframe,
	object,
	embed {
		margin: 0 auto;
	}
}
