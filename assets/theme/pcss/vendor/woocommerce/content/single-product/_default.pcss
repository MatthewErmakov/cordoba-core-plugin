.item-product {
	/* CASE: product single cart form tweaks */
	.form-field-group {
		margin-bottom: 20px;
	}

	.form-control {
		@media (--viewport-medium) {
			max-width: 150px;
		}
	}

	/* CASE: product single social share tweaks */
	.social-share {
		text-align: center;
		margin-top: 20px;

		@media (--viewport-medium) {
			display: inline-block;
			margin-top: 0;
		}
	}
}

