/* -----------------------------------------------------------------------------
 * Product: Wrapper
 * ----------------------------------------------------------------------------- */

.item-product__wrapper {
	@media (--viewport-full) {
		display: flex;
	}

	& > * {
		@media (--viewport-full) {
			flex: 1 1 50%;
		}
	}
}

/* -----------------------------------------------------------------------------
 * Product: Wrapper - Content
 * ----------------------------------------------------------------------------- */

.item-product__content {

}

/* -----------------------------------------------------------------------------
 * Product: Wrapper - Gallery
 * ----------------------------------------------------------------------------- */

.woocommerce-product-gallery {
	@mixin clearfix;

	margin-bottom: 28px;
	max-width: 550px;

	@media (--viewport-full) {
		margin-right: var(--grid-gutter);
		margin-bottom: 0;
		max-width: none;
	}
}
