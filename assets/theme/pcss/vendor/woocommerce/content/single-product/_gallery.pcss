.woocommerce-product-gallery {
	position: relative;

	.flex-viewport {
		float: right;
		width: calc(100% - 60px);

		@media (--viewport-medium) {
			width: calc(100% - 100px);
		}

		@media (--viewport-full) {
			width: calc(100% - 70px);
		}

		@media (--viewport-large) {
			width: calc(100% - 100px);
		}

		/* CASE: product has no gallery */
		.item-product--has-no-gallery & {
			float: none;
			width: auto;
		}
	}

	.woocommerce-product-gallery__image {

		a {
			display: block;
			background-color: var(--color-desert-storm);
		}
	}

	.flex-control-thumbs {
		width: 40px;
		float: left;
		position: relative;
		z-index: 1;

		@media (--viewport-medium) {
			width: 70px;
		}

		@media (--viewport-full) {
			width: 40px;
		}

		@media (--viewport-large) {
			width: 70px;
		}

		li {
			line-height: 0;
			margin-bottom: 8px;
		}

		/* CASE: product has no gallery */
		.item-product--has-no-gallery & {
			display: none;
		}
	}
}

.woocommerce-product-gallery__trigger {
	position: absolute;
	top: 5px;
	right: 5px;
	display: block;
	z-index: 2;
	height: 32px;
	width: 32px;
	text-align: center;
	line-height: 40px;
	color: var(--color-waikawa-grey);
	overflow: hidden;

	@media (--viewport-medium) {
		top: 15px;
		right: 15px;
	}

	&:hover,
	&:focus {
		color: var(--color-brown-rust);
	}

	&:before {
		@mixin icon;

		content: var(--icon-zoom-in);
		font-size: 22px;
	}

	/* CASE: used in instrument single highlights gallery */
	.item-instrument__section--highlights & {
		right: 17px;
		background-color: var(--color-white-50);
		border-radius: 50%;

		@media (--viewport-medium) {
			right: 35px;
		}

		@media (--viewport-xlarge) {
			right: 40px;
		}
	}
}

.woocommerce-product-gallery__image--placeholder {
	@media (--viewport-full) {
		text-align: right;
	}
}
