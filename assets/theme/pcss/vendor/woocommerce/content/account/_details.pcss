/* CASE: change password */
.woocommerce-EditAccountForm {

	fieldset {
		margin-top: 28px;
		margin-bottom: 0;
	}

	legend {
		width: 100%;
		color: var(--color-text);
		font-size: 18px;
		line-height: var(--line-height-125);
		margin-bottom: 25px;

		@media (--viewport-medium) {
			font-size: 21px;
		}
	}

	#account_display_name + span {
		@mixin form-control-helper;

		margin-bottom: var(--gf-description-margin-bottom);
		max-width: var(--gf-description-max-width);
	}
}
