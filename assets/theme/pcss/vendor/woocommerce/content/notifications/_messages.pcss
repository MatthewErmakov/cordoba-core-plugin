.woocommerce-messaging__no-results {
	text-align: center;
	margin: 0 auto;
	padding: 70px 25px 66px;
	width: 100%;

	& > * {
		font-size: 21px;
		font-weight: var(--font-weight-bold);
		line-height: var(--line-height-12);
		margin-bottom: 15px;

		@media (--viewport-medium) {
			margin-bottom: 20px;
			font-size: 28px;
		}

		&:last-child {
			margin-bottom: 0;
		}
	}
}
