.checkout_coupon {

	.form-row-first {
		margin-bottom: 10px !important;

		@media (--viewport-medium) {
			margin-bottom: 0 !important;
		}
	}

	.form-row-last {
		margin-bottom: 0 !important;
	}

	input[name="apply_coupon"] {
		margin-top: 0 !important;
		width: 100%;
		font-size: 14px;

		@media (--viewport-medium) {
			width: auto;
			height: 45px;
			padding-top: 0;
			padding-bottom: 0;
		}
	}
}
