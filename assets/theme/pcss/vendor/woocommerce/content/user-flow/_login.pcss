#customer_login {
	/* Form: Login */
	.login {
		position: relative;
	}

	.woocommerce-Button {
		margin-bottom: 0;
	}
}

/* Login: Remember Me */
p.woocommerce-login-rememberme.form-row {
	@media (--viewport-medium) {
		position: absolute;
		right: 0;
		bottom: 25px;
		margin-bottom: 0;
	}
}

/* Login: Forget Password? */
.woocommerce-LostPassword {
	@media (--viewport-medium) {
		font-size: 14px;
		position: absolute;
		right: 0;
		top: -4px;
		margin-bottom: 0 !important;
	}
}
