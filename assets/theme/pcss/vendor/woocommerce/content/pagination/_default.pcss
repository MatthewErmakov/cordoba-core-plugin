.woocommerce-Pagination {
	@mixin clearfix;

	width: 100%;
	text-align: center;
	margin-top: 36px;

	@media (--viewport-medium) {
		margin-top: 45px;
	}

	a.button {
		@mixin button-global;

		color: var(--color-brown-rust);
		text-transform: uppercase;
		font-size: 13px;
		letter-spacing: var(--letter-spacing-04);
		padding: 10px 0 8px;

		@media (--viewport-medium) {
			font-size: 18px;
			letter-spacing: var(--letter-spacing-05);
			padding: 15px 0 13px;
		}

		&:visited {
			color: var(--color-brown-rust);
		}

		&:hover,
		&:focus,
		&:active {
			color: var(--color-apricot);
		}

		&:active,
		&:focus {
			outline: 1px dotted;
		}
	}

	.woocommerce-Button--previous {
		float: left;
		margin-right: 10px;

		&:hover,
		&:focus,
		&:active {

			&:before {
				animation: bump-left 350ms var(--ease-out-sine);
				color: var(--color-jumbo);
			}
		}

		&:before {
			@mixin icon;

			content: var(--icon-arrow-left-decor);
			color: var(--color-iron-alt-alt);
			font-size: 40px;
			display: inline-block;
			vertical-align: middle;
			position: relative;
			bottom: 2px;
			line-height: 0;
			transition: var(--transition-ease);

			@media (--viewport-medium) {
				font-size: 54px;
				bottom: 3px;
			}
		}
	}

	.woocommerce-Button--next {
		float: right;
		margin-left: 10px;

		&:hover,
		&:focus,
		&:active {

			&:after {
				animation: bump-right 350ms var(--ease-out-sine);
				color: var(--color-jumbo);
			}
		}

		&:after {
			@mixin icon;

			content: var(--icon-arrow-right-decor);
			color: var(--color-iron-alt-alt);
			font-size: 40px;
			display: inline-block;
			vertical-align: middle;
			position: relative;
			bottom: 2px;
			line-height: 0;
			transition: var(--transition-ease);

			@media (--viewport-medium) {
				font-size: 54px;
				bottom: 3px;
			}
		}
	}
}
