.woocommerce-checkout {

	form.woocommerce-checkout {
		margin-top: 0;
	}
}

/* -----------------------------------------------------------------------------
 * Checkout: Login & Checkout Anchors/Flow
 * ----------------------------------------------------------------------------- */

.woocommerce-checkout .login,
.checkout_coupon {
	@mixin clearfix;

	margin: -4px auto 12px !important;
	padding: 10px 15px 25px;
	border: 2px solid var(--color-waikawa-grey);
	border-top: 0;
	background-color: var(--color-white);

	@media (--viewport-medium) {
		padding-left: 20px;
		padding-right: 20px;
	}

	.clear {
		clear: both;
	}
}

/* -----------------------------------------------------------------------------
 * Order Pay: Form
 * ----------------------------------------------------------------------------- */

.checkout {

}

#ship-to-different-address {
	@media (--viewport-full) {
		margin-top: 50px;
	}
}

/* -----------------------------------------------------------------------------
 * Checkout: Payment
 * ----------------------------------------------------------------------------- */

#payment {
	/* CASE: Terms & Conditions */
	.wc-terms-and-conditions,
	.woocommerce-mailchimp-opt-in {
		display: block;
		float: none !important;

		label {
			font-weight: var(--font-weight-bold);
		}
	}
}

/* CASE: WC Privacy Text + MailChimp GDPR Text */
#gdpr-label,
#gdpr-description {
	font-size: 15px;
	color: var(--color-nevada);
}

#gdpr-legal {
	font-size: 13px;
	color: var(--color-nevada);
}

#gdpr-footer {
	font-size: 12px;
	color: var(--color-nevada);
	border-bottom: 1px solid var(--color-border);
	padding-bottom: 30px;

	@media (--viewport-medium) {
		padding-bottom: 36px;
	}
}

.woocommerce-privacy-policy-text {

	p {
		font-style: italic;
		font-size: 15px;
		color: var(--color-nevada);
	}
}

.woocommerce-checkout-payment {
	@media (--viewport-full) {
		max-width: 50%;
		padding-right: 25px;
	}
}

/* CASE: Payment Methods */
.woocommerce-checkout-payment {

	.wc_payment_methods {
		list-style: none;
		padding: 0;

		img {
			display: none;
		}

		.payment_box {
			margin-top: 15px;

			& > p,
			& > fieldset > p:first-child {
				font-size: 14px;
				max-width: 600px;
				margin-bottom: 0;
			}
		}
	}

	.wc_payment_method {
		min-height: 24px;
		background-color: var(--color-desert-storm);
		border-top: 1px solid var(--color-border);
		border-bottom: 1px solid var(--color-border);
		padding: 23px var(--grid-gutter-small) 20px;

		@media (--viewport-medium) {
			padding: 23px var(--grid-gutter) 20px;
		}

		& ~ .wc_payment_method {
			margin-top: 10px;
		}

		.form-control-radio.form-control-custom-style {

			label {
				font-weight: var(--font-weight-bold);
				color: var(--color-text) !important;
			}
		}
	}
}

/* CASE: Place Order */
.place-order {
	margin-top: 30px;
}

#place_order {
	width: 100%;
	display: block;
	margin-top: 48px;
	margin-bottom: 0 !important;
	float: none !important;
	padding-top: 23px;
	padding-bottom: 18px;
}

