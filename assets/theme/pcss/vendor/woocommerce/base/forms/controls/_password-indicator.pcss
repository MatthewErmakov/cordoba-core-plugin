.woocommerce-password-strength {
	background-color: var(--color-grey);
	font-weight: var(--font-weight-bold);
	text-align: center;
	margin: 8px auto 10px;
	text-transform: uppercase;
	font-size: 12px;
	padding: 13px 15px 9px;

	@media (--viewport-medium) {
		font-size: 13px;
	}

	/* CASE: bad / short */
	&.short,
	&.bad {
		background-color: var(--form-color-error);
		color: var(--color-white);
	}

	/* CASE: good / ok */
	&.good {
		background-color: var(--color-fuel-yellow);
		color: var(--color-white);
	}

	/* CASE: strong */
	&.strong {
		background-color: var(--color-apple);
		color: var(--color-white);
	}
}

.woocommerce-password-hint {
	display: block;
	margin: 0;
	max-width: 540px;
	line-height: var(--line-height-135);
	font-style: italic;
	font-size: 14px;
}
