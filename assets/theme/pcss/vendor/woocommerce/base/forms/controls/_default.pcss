.input-text {
	@mixin form-control;

	&:focus {
		border: var(--form-control-border-size-focus) solid var(--form-control-border-color-focus);
	}
}

/* CASE: Decrease spacing between address inputs */
#billing_address_1_field + #billing_address_2_field,
#shipping_address_1_field + #shipping_address_2_field {
	margin-top: -14px;
}
