.gform_confirmation_wrapper {
	margin: var(--gf-state-success-margin);
	padding: var(--gf-state-success-padding);
	text-align: center;
	border: var(--gf-validation-border-size) solid var(--gf-state-success-border-color);
	background-color: var(--gf-state-success-bgd-color);
	border-radius: var(--gf-validation-border-radius);
	color: var(--gf-state-success-color);
	position: relative;

	&:before {
		@mixin icon;

		content: var(--gf-state-success-icon);
		color: var(--gf-state-success-icon-color);
		text-align: center;
		font-size: var(--gf-state-success-icon-font-size);
	}
}

.gform_confirmation_message {
	max-width: var(--gf-validation-max-width);
	margin: 0 auto;
	padding-top: var(--gf-state-success-icon-to-text-spacing);
	letter-spacing: var(--gf-state-success-letter-spacing);
	text-transform: var(--gf-state-success-text-transform);
	font: var(--gf-state-success-font-style) var(--gf-state-success-font-weight) var(--gf-state-success-font-size) / var(--gf-state-success-line-height) var(--gf-state-success-font-family);

	h1,
	h2,
	h3,
	h4,
	h5,
	h6 {
		margin-bottom: 12px;
		margin-top: 0;
		font-family: var(--gf-state-success-font-family);
		font-weight: var(--font-weight-bold);
		font-style: normal;
		line-height: 1.25;
		color: var(--gf-state-success-color);
		font-size: 26px;
	}
}
