		}
	}

	&.ui-datepicker .ui-datepicker-prev-hover,
	&.ui-datepicker .ui-datepicker-next-hover {

		span {

			&:after {
				color: var(--color-bali-hai);
			}
		}
	}
	*/

	&.ui-datepicker table {
		margin: 0;
		background-color: transparent;
		table-layout: auto;
	}

	tbody {
		background: var(--jquery-datepicker-bgd-color-secondary);
	}

	&.ui-datepicker th {
		padding: 10px 0;
		color: var(--color-bombay);
		border: 0;
		background-color: transparent;
		font-size: 13px;
		line-height: 1;
	}

	&.ui-datepicker tr {
		border: none;
		background-color: var(--jquery-datepicker-bgd-color-tertiary);
	}

	&.ui-datepicker td {
		background: var(--jquery-datepicker-bgd-color-quaternary);
		border: none;
		padding: 0;
		line-height: 1;
	}

	td .ui-state-default {
		background: transparent;
		border: none;
		text-align: center;
		margin: 0;
		color: var(--jquery-datepicker-color);
		font-size: 16px;
		padding: 12px;
		line-height: 1;
	}

	.ui-state-disabled {
		opacity: 1;
	}

	.ui-state-disabled .ui-state-default {
		color: var(--jquery-datepicker-color-disabled);
	}

	td .ui-state-active,
	td .ui-state-hover {
		background: var(--jquery-datepicker-bgd-color-active);
		font-weight: var(--font-weight-bold);
		color: var(--color-white);
	}
}
