:root {
	/* -----------------------------------------------------------------------------
	 * General
	 * ----------------------------------------------------------------------------- */

	--chosen-bgd-color: var(--form-control-bgd-color);
	--chosen-border-size: var(--form-control-border-size);
	--chosen-border-size-focus: var(--form-control-border-size-focus);
	--chosen-border-color: var(--form-control-border-color);
	--chosen-border-color-focus: var(--form-control-border-color-focus);
	--chosen-border-radius: var(--form-border-radius);
	--chosen-color: var(--color-nevada);
	--chosen-font-size: var(--form-font-size);
	--chosen-font-style: var(--form-control-font-style);
	--chosen-font-weight: var(--form-control-font-weight);
	--chosen-font-line-height: var(--form-control-height);
	--chosen-font-family: var(--form-font-family);
	--chosen-height: var(--form-control-height);
	--chosen-letter-spacing: var(--form-letter-spacing);
	--chosen-padding: var(--form-padding-horizontal);
	--chosen-text-transform: var(--form-text-transform);

	/* Multiple */
	--chosen-multiple-min-height: 53px;

	/* Font */
	--chosen-default-font-family: var(--form-font-family);
	--chosen-default-font-line-height: var(--form-control-height);
	--chosen-default-font-style: var(--form-control-font-style);
	--chosen-default-font-size: var(--chosen-font-size);
	--chosen-default-font-weight: var(--form-control-font-weight);

	/* Option */
	--chosen-default-option-font-weight: var(--form-control-font-weight);
	--chosen-option-chosen-font-weight: var(--font-weight-bold);
	--chosen-option-chosen-margin-right: calc(var(--form-control-height) + var(--form-padding-horizontal));

	/* Placeholder */
	--chosen-placeholder-color: var(--form-color-placeholder);
	--chosen-placeholder-color-focus: var(--color-text);

	/* -----------------------------------------------------------------------------
	 * Search
	 * ----------------------------------------------------------------------------- */

	--chosen-search-bgd-color: var(--form-control-bgd-color);
	--chosen-search-border-color: var(--form-border-color);
	--chosen-search-height: var(--form-control-height);
	--chosen-search-padding: 0 var(--chosen-option-chosen-margin-right) 0 var(--form-padding-horizontal);
	--chosen-search-ui-color: var(--form-control-select-ui-color);
	--chosen-search-ui-font-size: 19px;
	--chosen-search-ui-icon: var(--icon-search);
	--chosen-search-ui-line-height: var(--form-control-height);
	--chosen-search-ui-position-right: 0;
	--chosen-search-ui-position-top: 0;
	--chosen-search-ui-width: var(--form-control-height);

	/* -----------------------------------------------------------------------------
	 * Drop
	 * ----------------------------------------------------------------------------- */

	--chosen-drop-bgd-color: var(--color-white);
	--chosen-drop-border-radius: 0 0 var(--form-border-radius) var(--form-border-radius);

	/* -----------------------------------------------------------------------------
	 * Results
	 * ----------------------------------------------------------------------------- */

	--chosen-results-bgd-color-highlighted: var(--color-wild-sand);
	--chosen-results-bgd-color-no-results: var(--color-wild-sand);
	--chosen-results-color-no-results: var(--color-nevada);
	--chosen-results-color-disabled: var(--form-color-placeholder);
	--chosen-results-color-highlighted: var(--color-nevada);
	--chosen-results-font-size: var(--form-font-size);
	--chosen-results-font-style: var(--form-control-font-style);
	--chosen-results-font-weight: var(--form-control-font-weight);
	--chosen-results-line-height: normal;
	--chosen-results-font-family: var(--form-font-family);
	--chosen-results-padding: 12px var(--form-padding-horizontal) 10px;

	/* Group */
	--chosen-results-group-font-weight: var(--font-weight-bold);
	--chosen-results-group-padding-left: var(--form-padding-horizontal);

	/* -----------------------------------------------------------------------------
	 * Multiple
	 * ----------------------------------------------------------------------------- */

	--chosen-multiple-choice-bgd-color: var(--color-bali-hai);
	--chosen-multiple-choice-color: var(--color-white);

	/* Font */
	--chosen-multiple-choice-font-size: 13px;
	--chosen-multiple-choice-font-style: var(--form-control-font-style);
	--chosen-multiple-choice-font-weight: var(--font-weight-bold);
	--chosen-multiple-choice-line-height: 1;
	--chosen-multiple-choice-font-family: var(--form-font-family);

	/* Spacers */
	--chosen-multiple-choice-margin: 8px 8px 0 0;
	--chosen-multiple-choice-padding: 12px 30px 10px 10px;

	/* UI */
	--chosen-multiple-choice-close-bgd-color: var(--color-nevada);
	--chosen-multiple-choice-close-bgd-color-hover: var(--color-waikawa-grey);
	--chosen-multiple-choice-close-color: var(--color-white);
	--chosen-multiple-choice-close-icon: var(--icon-cross);
	--chosen-multiple-choice-close-font-size: 12px;
	--chosen-multiple-choice-close-height: 12px;
	--chosen-multiple-choice-close-margin-top: -6px;
	--chosen-multiple-choice-close-width: 20px;

	/* Results */
	--chosen-multiple-results-padding: 0 0 8px;
	--chosen-multiple-result-selected-color: var(--form-color-placeholder);
}
