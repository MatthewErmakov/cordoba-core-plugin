#tribe-loop-filters {
	width: 100%;
	min-height: 650px;
}

/* -----------------------------------------------------------------------------
 * Wrapper - Inner
 * ----------------------------------------------------------------------------- */

.tribe-loop-filters__wrapper {
	position: relative;
}

/* -----------------------------------------------------------------------------
 * Wrapper - Loader
 * ----------------------------------------------------------------------------- */

.tribe-loop-filters__loader {
	position: relative;

	&:before,
	&:after {
		content: '';
		position: absolute;
		width: 100%;
		height: 100%;
		top: 0;
		bottom: 0;
		left: 0;
		right: 0;
		background-color: var(--color-white);
		z-index: 3;
	}

	&:after {
		background: svg-load('loader.svg', stroke=var(--color-waikawa-grey)) no-repeat 50%;
		background-size: 80px;
		width: 80px;
		height: 80px;
		top: 125px;
		left: 50%;
		margin-left: -40px;

		/* CASE: add fallback rotation for all things IE */
		.browser-edge &,
		.browser-ie & {
			animation: rotate 2s linear infinite;
		}
	}
}

/* Loader: App Loaded */
.tribe-loop-filters__loader--app {
	/* CASE: App has loaded */
	&.tribe-loop-filters--loaded {

		&:before,
		&:after {
			animation-name: opacity-out, visibility-out;
			animation-duration: 0.2s;
			animation-delay: 0.35s, 0.55s;
			animation-fill-mode: both;
			animation-timing-function: ease;
			animation-iteration-count: 1;
		}
	}
}

/* Loader: Results Loaded */
.tribe-loop-filters__loader--results {

	&:before,
	&:after {
		width: auto;
		opacity: 0;
		visibility: hidden;
		z-index: -1;
		transition: visibility 0s ease 0.2s, z-index 0s ease 1s, opacity 0.2s ease;

		@media (--viewport-full) {
			width: 100%;
		}
	}

	&:before {
		margin-left: var(--grid-gutter-small-negative);
		margin-right: var(--grid-gutter-small-negative);

		@media (--viewport-full) {
			margin-left: 0;
			margin-right: 0;
		}
	}

	&:after {
		top: 75px;
		width: 80px;

		@media (--viewport-full) {
			top: 120px;
		}
	}

	/* CASE: Results are loading */
	&.tribe-loop-filters--loading {

		&:before,
		&:after {
			transition: visibility 0s ease, z-index 0s ease, opacity 0.2s ease;
			visibility: visible;
			opacity: 1;
			z-index: 3;
		}
	}
}
