
/* -------------------------------------------------------------------------
 * Legend
 * Note: By default, styled to match the label
 * ------------------------------------------------------------------------- */

legend {
	display: block;
	margin-bottom: var(--form-legend-margin-bottom);
	color: var(--form-legend-color);
	letter-spacing: var(--form-legend-letter-spacing);
	text-transform: var(--form-legend-text-transform);
	font: var(--form-legend-font-style) var(--form-legend-font-weight) var(--form-legend-font-size) / var(--form-legend-font-line-height) var(--form-legend-font-family);
}

/* -------------------------------------------------------------------------
 * Legend, Styled
 * Note: Styled legend to go along with styled fieldset
 * ------------------------------------------------------------------------- */

.form-legend {
	color: var(--form-legend-styled-color);
	margin-bottom: var(--form-legend-styled-margin-bottom);
	padding: var(--form-legend-styled-padding);
	text-align: var(--form-legend-styled-text-align);
	letter-spacing: var(--form-legend-styled-letter-spacing);
	text-transform: var(--form-legend-styled-text-transform);
	font: var(--form-legend-styled-font-style) var(--form-legend-styled-font-weight) var(--form-legend-styled-font-size) / var(--form-legend-styled-font-line-height) var(--form-legend-styled-font-family);
}
