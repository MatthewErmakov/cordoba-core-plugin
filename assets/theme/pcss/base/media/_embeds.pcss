.wp-embed {
	break-inside: avoid-column;
	max-width: none;

	.t-content & {
		margin: var(--spacer-m) auto;

		@media (--viewport-medium) {
			margin: 40px auto;
		}
	}
}

/* CASE: Lazyloaded embed */
.wp-embed--lazy {

}

/* CASE: Non-lazyloaded embed */
.wp-embed--no-lazy {

}

.wp-embed-wrap {
	position: relative;

	/* CASE: Non-lazyloaded embed */
	.wp-embed--no-lazy & {
		aspect-ratio: '16:9';
		overflow: hidden;
	}

	iframe,
	object,
	embed {
		width: 100%;
		height: 100%;
	}
}
