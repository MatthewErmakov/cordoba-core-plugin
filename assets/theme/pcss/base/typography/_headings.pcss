
/* -------------------------------------------------------------------------
 * Heading: H1
 * ------------------------------------------------------------------------- */

.h1,
.t-content h1 {
	font-size: 35px;
	font-family: var(--font-family-quando);
	line-height: var(--line-height-12);

	@media (--viewport-medium) {
		font-size: 50px;
		line-height: var(--line-height-108);
	}
}

h1 {

	.t-content & {
		margin-top: 40px;
		margin-bottom: 21px;
	}
}

/* -------------------------------------------------------------------------
 * Heading: H2
 * ------------------------------------------------------------------------- */

.h2,
.t-content h2 {
	font-size: 26px;
	font-family: var(--font-family-quando);
	line-height: var(--line-height-12);

	@media (--viewport-medium) {
		font-size: 42px;
		line-height: var(--line-height-115);
	}
}

h2 {

	.t-content & {
		margin-top: 40px;
		margin-bottom: 14px;
	}
}

/* -------------------------------------------------------------------------
 * Heading: H3
 * ------------------------------------------------------------------------- */

.h3,
.t-content h3 {
	font-size: 22px;
	line-height: var(--line-height-12);
	font-weight: var(--font-weight-bold);

	@media (--viewport-medium) {
		font-size: 30px;
		line-height: var(--line-height-125);
	}
}

h3 {

	.t-content & {
		margin-top: 40px;
		margin-bottom: 12px;
	}
}

