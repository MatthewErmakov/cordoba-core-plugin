 * Heading: H6
 * ------------------------------------------------------------------------- */

.h6,
.t-content h6 {
	font-size: 15px;
	font-weight: var(--font-weight-bold);
	line-height: var(--line-height-12);
	text-transform: uppercase;
	letter-spacing: var(--letter-spacing-04);

	@media (--viewport-medium) {
		font-size: 18px;
		letter-spacing: var(--letter-spacing-05);
	}
}

h6 {

	.t-content & {
		margin-top: 40px;
		margin-bottom: 12px;
	}
}
