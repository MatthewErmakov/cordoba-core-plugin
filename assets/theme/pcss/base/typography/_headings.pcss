/* -------------------------------------------------------------------------
 * Heading: H5
 * ------------------------------------------------------------------------- */

.h5,
.t-content h5 {
	font-size: 18px;
	font-weight: var(--font-weight-bold);
	line-height: var(--line-height-12);

	@media (--viewport-medium) {
		font-size: 22px;
		line-height: var(--line-height-125);
